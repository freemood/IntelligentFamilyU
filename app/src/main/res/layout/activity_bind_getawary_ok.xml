<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include layout="@layout/back_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_120dp"
            android:background="@mipmap/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dime_16dp"

            android:background="@drawable/banner_shape"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dime_32dp"
                android:src="@mipmap/userdentitysubmitsuccess" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dime_16dp"
                android:text="@string/home_add_gateway_ok_title"
                android:textColor="@color/home_black"
                android:textSize="@dimen/dime_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_32dp"
                android:orientation="vertical"
                android:paddingEnd="@dimen/dime_32dp"
                android:paddingStart="@dimen/dime_32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_8dp"
                    android:text="@string/home_add_gateway_ok_room"
                    android:textColor="@color/home_black"
                    android:textSize="@dimen/dime_20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/home_living_room"
                        android:textColor="@color/home_black"
                        android:textSize="@dimen/dime_16sp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/home__kitchen"
                        android:textColor="@color/home_black"
                        android:textSize="@dimen/dime_16sp" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/dime_140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/dime_32dp"
        android:background="@drawable/btn_shape"
        android:paddingBottom="@dimen/dime_8dp"
        android:paddingEnd="@dimen/dime_16dp"
        android:paddingStart="@dimen/dime_16dp"
        android:paddingTop="@dimen/dime_8dp"
        android:text="@string/btn_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/dime_16sp" />


</LinearLayout>