<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_120dp"
            android:background="@mipmap/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dime_16dp"
                android:layout_marginRight="@dimen/dime_16dp"
                android:layout_marginTop="@dimen/dime_32dp"
                android:background="@drawable/banner_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:src="@mipmap/search" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dime_8dp"
                    android:background="@color/transparent"
                    android:hint="@string/home_cloud_hit_search"
                    android:padding="@dimen/dime_12dp"
                    android:singleLine="true"
                    android:textColor="@color/home_grgray_1"
                    android:textColorHint="@color/home_line_1"
                    android:textSize="@dimen/dime_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_files_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dime_16dp"
                android:background="@drawable/banner_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_dir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/filedir" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_dir"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_all_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/photo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_photo"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_photo_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_doc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/doctext" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_doc"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_doc_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/music" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_music"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_music_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_1dp"
                    android:layout_margin="@dimen/dime_16dp"
                    android:background="@color/home_line_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/video" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_video"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_video_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/file_zips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/zips" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file_zips"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_zip_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/file1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/zips" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_photo_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <TextView
                            android:id="@+id/file2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/zips" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/file2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dime_3dp"
                            android:text="@string/home_cloud_photo_files"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dime_13sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dime_16dp"
                android:background="@drawable/banner_shape"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dime_16dp"
                    android:layout_marginRight="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:scrollbars="none" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>