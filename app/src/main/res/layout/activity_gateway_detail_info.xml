<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_sence_3"
    android:orientation="vertical">

    <include layout="@layout/back_title_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_120dp"
            android:background="@mipmap/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dime_16dp"
            android:background="@drawable/banner_shape"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/gateway_name_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp">

                <TextView
                    android:id="@+id/gateway_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_gateway_detail_name_info_neme"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />

                <TextView
                    android:id="@+id/gateway_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gateway_name"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_8dp"
                    android:textColor="@color/home_grgray_1"
                    android:textSize="@dimen/dime_13sp" />

                <ImageView
                    android:layout_width="@dimen/dime_16dp"
                    android:layout_height="@dimen/dime_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:src="@mipmap/arrow_right_normal" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_0_5dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:background="@color/home_line_2" />

            <RelativeLayout
                android:id="@+id/gateway_base_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp">

                <TextView
                    android:id="@+id/gateway_base_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_gateway_detail_name_info_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />


                <ImageView
                    android:layout_width="@dimen/dime_16dp"
                    android:layout_height="@dimen/dime_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:src="@mipmap/arrow_right_normal" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_0_5dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:background="@color/home_line_2" />

            <RelativeLayout
                android:id="@+id/my_setting_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp">

                <TextView
                    android:id="@+id/my_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_gateway_detail_name_info_wifi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />


                <ImageView
                    android:layout_width="@dimen/dime_16dp"
                    android:layout_height="@dimen/dime_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:src="@mipmap/arrow_right_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_zhanghao_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp">

                <TextView
                    android:id="@+id/my_zhanghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_network_detail_zhanghao_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />


                <ImageView
                    android:layout_width="@dimen/dime_16dp"
                    android:layout_height="@dimen/dime_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:src="@mipmap/arrow_right_normal" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_0_5dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:background="@color/home_line_2" />

            <RelativeLayout
                android:id="@+id/my_state_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp">

                <TextView
                    android:id="@+id/my_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_network_detail_state"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />


                <com.Intelligent.FamilyU.view.SwitchView
                    android:id="@+id/switch_sclete"
                    android:layout_width="@dimen/dime_32dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_0_5dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:background="@color/home_line_2" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
