<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_sence_3"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_120dp"
                android:background="@mipmap/bg" />
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dime_180dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginTop="@dimen/dime_16dp" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/gatewary_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dime_16dp"
            android:layout_marginStart="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dime_16dp"
            android:background="@drawable/banner_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dime_16dp"
            android:layout_marginStart="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dime_16dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/use_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/banner_shape"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yunxing_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/dime_8dp"
                    android:layout_marginTop="@dimen/dime_8dp"
                    android:text="@string/home_room_cpu_memory_title"
                    android:textColor="@color/home_black"
                    android:textSize="@dimen/dime_16sp" />


                <LinearLayout
                    android:id="@+id/view_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/yunxing_tv"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <com.Intelligent.FamilyU.view.SportProgressView
                            android:id="@+id/cpu_iv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dime_100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dime_16dp"
                            app:emptyColor="@color/home_cpu_empty"
                            app:endColor="@color/home_main"
                            app:progressWidth="@dimen/dime_8dp"
                            app:startColor="@color/home_main"
                            app:stepTextSize="@dimen/dime_13sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cpu_iv"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/home_room_cpu_setting"
                            android:textColor="@color/home_grgray_1"
                            android:textSize="@dimen/dime_13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <com.Intelligent.FamilyU.view.SportProgressView
                            android:id="@+id/yjcs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dime_100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dime_16dp"
                            app:emptyColor="@color/home_memory_empty"
                            app:endColor="@color/home_bule"
                            app:progressWidth="@dimen/dime_8dp"
                            app:startColor="@color/home_bule"
                            app:stepTextSize="@dimen/dime_13sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/yjcs"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/home_room_cpu_memory"
                            android:textColor="@color/home_grgray_1"
                            android:textSize="@dimen/dime_13sp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dime_8dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginTop="@dimen/dime_8dp"
                android:background="@mipmap/more"
                android:paddingEnd="@dimen/dime_8dp"
                android:paddingStart="@dimen/dime_8dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dime_16dp"
            android:layout_marginStart="@dimen/dime_16dp"
            android:layout_marginTop="@dimen/dime_16dp"
            android:background="@drawable/banner_shape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dime_16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/gatewaytv_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gatewaytv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/home_my_gateway_device"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />

                    <ImageView
                        android:id="@+id/iv_tab_bottom_img1"
                        android:layout_width="@dimen/dime_32dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_16dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_8dp"
                        android:src="@color/home_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/networkingtv_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/networkingtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/home_my_networking_device"
                        android:textColor="@color/home_grgray_2"
                        android:textSize="@dimen/dime_16sp" />

                    <ImageView
                        android:id="@+id/iv_tab_bottom_img2"
                        android:layout_width="@dimen/dime_32dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_16dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_8dp"
                        android:src="@color/home_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hometv_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hometv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/home_my_home_device"
                        android:textColor="@color/home_grgray_2"
                        android:textSize="@dimen/dime_16sp" />

                    <ImageView
                        android:id="@+id/iv_tab_bottom_img3"
                        android:layout_width="@dimen/dime_32dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_16dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_8dp"
                        android:src="@color/home_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plugintv_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/plugintv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/home_my_plugin_device"
                        android:textColor="@color/home_grgray_2"
                        android:textSize="@dimen/dime_16sp" />

                    <ImageView
                        android:id="@+id/iv_tab_bottom_img4"
                        android:layout_width="@dimen/dime_32dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dime_16dp"
                        android:layout_marginRight="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_8dp"
                        android:src="@color/home_main" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/device_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/home_my_many_device"
                android:textColor="@color/home_grgray_2"
                android:textSize="@dimen/dime_16sp"
                android:visibility="gone" />

            <com.Intelligent.FamilyU.view.CustomViewMorePager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dime_16dp"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>