<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_sence_3"
    android:orientation="vertical">

    <include layout="@layout/back_title_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dime_120dp"
            android:background="@mipmap/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginTop="@dimen/dime_32dp"
                android:background="@drawable/banner_shape">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_16dp"
                    android:text="@string/home_gateway_detail_name_info_neme"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dime_16sp" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginBottom="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_8dp"
                    android:textColor="@color/home_grgray_1"
                    android:textSize="@dimen/dime_13sp" />

                <ImageView
                    android:layout_width="@dimen/dime_16dp"
                    android:layout_height="@dimen/dime_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:src="@mipmap/arrow_right_normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dime_16dp"
                android:layout_marginStart="@dimen/dime_16dp"
                android:layout_marginTop="@dimen/dime_16dp"
                android:background="@drawable/banner_shape"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp">

                    <TextView
                        android:id="@+id/manufactor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_16dp"
                        android:text="@string/home_network_detail_manufactor"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />


                    <TextView
                        android:id="@+id/manufactor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dime_16dp"
                        android:layout_marginStart="@dimen/dime_16dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_0_5dp"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_1dp"
                    android:background="@color/home_line_2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp">

                    <TextView
                        android:id="@+id/my_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_16dp"
                        android:text="@string/home_network_detail_device"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />


                    <TextView
                        android:id="@+id/device_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dime_16dp"
                        android:layout_marginStart="@dimen/dime_16dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_0_5dp"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_1dp"
                    android:background="@color/home_line_2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp">

                    <TextView
                        android:id="@+id/my_mac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_16dp"
                        android:text="@string/home_network_detail_mac"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />


                    <TextView
                        android:id="@+id/mac_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dime_16dp"
                        android:layout_marginStart="@dimen/dime_16dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_0_5dp"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_1dp"
                    android:background="@color/home_line_2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp">

                    <TextView
                        android:id="@+id/my_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/dime_16dp"
                        android:layout_marginTop="@dimen/dime_16dp"
                        android:text="@string/home_network_detail_sn"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />


                    <TextView
                        android:id="@+id/sn_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dime_16dp"
                        android:layout_marginStart="@dimen/dime_16dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dime_16sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dime_0_5dp"
                    android:layout_marginEnd="@dimen/dime_16dp"
                    android:layout_marginStart="@dimen/dime_16dp"
                    android:layout_marginTop="@dimen/dime_1dp"
                    android:background="@color/home_line_2" />
            </LinearLayout>

            <Button
                android:id="@+id/bnt_add"
                android:layout_width="@dimen/dime_140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/dime_32dp"
                android:layout_marginTop="@dimen/dime_16dp"
                android:background="@drawable/btn_shape"
                android:paddingBottom="@dimen/dime_8dp"
                android:paddingEnd="@dimen/dime_16dp"
                android:paddingStart="@dimen/dime_16dp"
                android:paddingTop="@dimen/dime_8dp"
                android:text="@string/home_add_black"
                android:textColor="@color/white"
                android:textSize="@dimen/dime_16sp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
