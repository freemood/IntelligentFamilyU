<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dime_8dp"
    android:layout_marginRight="@dimen/dime_8dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/setting_shape"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dime_32dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dime_4dp"
        android:src="@mipmap/gateway_page" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_margin="@dimen/dime_4dp"
        android:textColor="@color/home_black"
        android:textSize="@dimen/dime_13sp" />

</LinearLayout>


