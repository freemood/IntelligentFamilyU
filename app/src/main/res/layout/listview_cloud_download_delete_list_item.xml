<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dime_8dp"
    android:layout_marginTop="@dimen/dime_8dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dime_16dp"
        android:layout_marginRight="@dimen/dime_16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dime_16dp"
            android:background="@mipmap/ih_player_control_folder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/home_black"
                android:textSize="@dimen/dime_16sp" />


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dime_5dp"
                android:textColor="@color/home_grgray_2"
                android:textSize="@dimen/dime_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dime_8dp"
            android:layout_marginRight="@dimen/dime_8dp"
            android:text="1111"
            android:textColor="@color/home_grgray_2"
            android:textSize="@dimen/dime_13sp" />

        <TextView
            android:id="@+id/recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_recovery_shape"
            android:paddingEnd="@dimen/dime_12dp"
            android:paddingStart="@dimen/dime_12dp"
            android:text="@string/btn_recovery"
            android:textColor="@color/home_black"
            android:textSize="@dimen/dime_16sp" />
    </LinearLayout>

</RelativeLayout>

